<%= simple_form_for(@acquereur) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :prenom %>
    <%= f.input :nom %>
    <%= f.input :telephone %>
    <%= f.input :email %>
    <%= f.input :prix %>
    <%= f.input :chambre %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
